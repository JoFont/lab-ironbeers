<div class="card mb-3 mx-auto border-0 mt-5" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src={{beer.image_url}} class="card-img w-50" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{beer.name}}</h5>
        <p class="card-text text-secondary">{{beer.tagline}}</p>
        <p class="card-text">{{beer.description}}</p>
        <h6>Food Pairing</h6>
        <ul>
            {{#each beer.food_pairing}}
                <li>{{this}} </li>
            {{/each}}
        </ul>
        <p class="card-text"><strong>Brewer Tips:</strong> {{beer.brewers_tips}}</p>
      </div>
    </div>
  </div>
</div>